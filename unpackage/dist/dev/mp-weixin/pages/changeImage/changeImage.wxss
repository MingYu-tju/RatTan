.head {
  width: 750rpx;
  height: 800rpx;
}
.head .imag {
  width: 750rpx;
  height: 480rpx;
  position: absolute;
  top: 120rpx;
  display: flex;
  justify-content: center;
}
.head .imag image {
  width: 480rpx;
  height: 480rpx;
}
.head .switch {
  width: 750rpx;
  height: 200rpx;
  position: absolute;
  top: 600rpx;
  display: flex;
  align-items: center;
}
.head .switch .text {
  height: 200rpx;
  flex: 4;
  display: flex;
  flex-direction: column;
}
.head .switch .text .choose {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  font-family: Jost-Medium, Jost;
  font-size: 50rpx;
  font-weight: 500;
  background: linear-gradient(92deg, #012777 0%, #19439B 24%, #305DBD 48%, #385FAF 58%, #1A439A 76%, #012777 100%, #012777 100%);
  -webkit-background-clip: text;
  color: transparent;
}
.head .switch .text .favor {
  position: absolute;
  bottom: 50rpx;
  left: 50rpx;
  font-family: Jost-Medium;
  font-size: 40rpx;
  font-weight: 500;
  color: #000000;
}
.head .switch .switchBox {
  height: 200rpx;
  flex: 3;
  display: flex;
  flex-direction: column;
}
.head .switch .switchBox .switchButton {
  width: 100%;
  height: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.head .switch .switchBox .switchButton .left {
  width: 70rpx;
  height: 70rpx;
  margin: 0 30rpx;
}
.head .switch .switchBox .switchButton .left image {
  width: 100%;
  height: 100%;
}
.head .switch .switchBox .switchButton .right {
  width: 70rpx;
  height: 70rpx;
  margin: 0 30rpx;
}
.head .switch .switchBox .switchButton .right image {
  width: 100%;
  height: 100%;
}
.head .switch .switchBox .title {
  width: 100%;
  height: 40%;
  text-align: center;
  font-size: 40rpx;
  font-weight: 500;
}
.tail {
  width: 738rpx;
  height: 690rpx;
  background: linear-gradient(90deg, #D9D9D9 0%, #E5E5E5 25%, #F1F1F1 50%, #E7E7E7 75%, #D9D9D9 100%);
  border-radius: 60rpx;
  border: 8rpx solid #D1D1D1;
}
.tail .line {
  width: 540rpx;
  height: 0;
  position: absolute;
  top: 92rpx;
  margin: 0 105rpx;
  border: 6rpx solid #FFFFFF;
}
.tail .color {
  position: absolute;
  width: 700rpx;
  height: 180rpx;
  top: 220rpx;
  margin: 0 25rpx;
  display: flex;
  justify-content: space-around;
}
.tail .color view {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
  font-size: 80rpx;
  font-family: Jost-Black;
  color: #D1D1D1;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tail .button {
  position: absolute;
  bottom: 140rpx;
  left: 85rpx;
  width: 580rpx;
  height: 100rpx;
  background: linear-gradient(90deg, #169393 0%, #158B8B 0%, #19ADAD 28%, #1EBDBD 50%, #1AABAB 74%, #168888 100%);
  border-radius: 38rpx;
  border: 6rpx solid #1EBDBD;
  display: flex;
  justify-content: center;
  align-items: center;
