.ground {
  width: 750rpx;
  height: 1000rpx;
}
.ground .back {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
}
.hist {
  width: 750rpx;
  height: 140rpx;
  position: fixed;
  top: 0px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.hist .history {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 30rpx;
}
.hist .history image {
  width: 100%;
  height: 100%;
}
.tubebox {
  width: 750rpx;
  height: 580rpx;
  margin-top: 300rpx;
  display: flex;
  flex-direction: column;
  bounce: none;
}
.tubebox .tubebox1 {
  flex: 1;
  display: flex;
  justify-content: center;
}
.tubebox .tubebox1 .tube {
  width: 140rpx;
  height: 140rpx;
  position: relative;
  border: 1rpx solid black;
  border-radius: 50%;
}
.tubebox .tubebox2 {
  flex: 1;
  display: flex;
  justify-content: center;
}
.tubebox .tubebox2 .tube {
  width: 140rpx;
  height: 140rpx;
  min-width: 140rpx;
  position: relative;
  border: 1rpx solid black;
  border-radius: 50%;
}
.tail {
  width: 750rpx;
  position: fixed;
  bottom: 0px;
  display: flex;
  justify-content: center;
  bottom: 90rpx;
}
.tail .custom {
  width: 200rpx;
  height: 200rpx;
  padding: 20rpx 0;
}
.tail .custom image {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
  border: 3px solid #BDC6C3;
}
.say {
  width: 200rpx;
  line-height: 1.5em;
  position: absolute;
  right: 50rpx;
  bottom: 64rpx;
  text-align: center;
  border-radius: 15rpx;
}

