.box {
  width: 750rpx;
  height: 1500rpx;
  background: #e4e4e4;
  position: relative;
}
.box .all {
  width: 750rpx;
  height: 1300rpx;
  position: relative;
}
.box .all .detailBox {
  width: 618rpx;
  height: 516rpx;
  position: absolute;
  top: 140rpx;
  left: 66rpx;
  background: #FFFFFF;
  border: 8rpx solid #F5F5F5;
  border-radius: 40rpx;
