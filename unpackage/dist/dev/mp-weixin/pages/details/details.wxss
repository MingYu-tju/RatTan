  width: 460rpx;
  height: 520rpx;
  position: absolute;
  left: 65rpx;
  bottom: 0;
}
.box .all .img image {
  width: 100%;
  height: 100%;
}
.box .button {
  position: absolute;
  right: 80rpx;
  bottom: 80rpx;
  width: 184rpx;
  height: 96rpx;
  font-size: 38rpx;
  font-family: Jost-Regular, Jost;
  font-weight: 500;
  color: #000000;
  line-height: 28rpx;
  background: linear-gradient(90deg, #E2E207 0%, #FFFF71 30%, #FFFF71 71%, #E2E207 100%);
  box-shadow: 8rpx 0 8rpx 0 rgba(0, 0, 0, 0.2);
